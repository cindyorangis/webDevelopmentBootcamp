<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach((post) => { %>
    <h1><%= post.title %></h1>
    <p>
        <%= post.body.substring(0, 100) + " ..." %> 
        <a href="/posts/<%= post._id %>">Read More</a>
    </p>
<% }) %>
